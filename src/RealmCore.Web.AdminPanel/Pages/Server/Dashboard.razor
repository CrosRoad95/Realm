@page "/server/dashboard"
@inject DashboardService _dashboardService;
<PageTitle>Dashboard</PageTitle>

<MudText Typo="Typo.h5" Color="Color.Primary" Class="mb-4">Dashboard</MudText>

<MudGrid>
    @foreach (var item in DashboardElements)
    {
        <MudItem xs="12" sm="6" md="3">
            <TextTile Title="@item.Name" Data="@item.Data" />
        </MudItem>
    }
</MudGrid>

@code {
    private List<DashboardElement> DashboardElements { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        DashboardElements.AddRange(await _dashboardService.GetAllDashboardElements());
    }
}