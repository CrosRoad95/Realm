@page "/realmGuiInitialized"
@using Microsoft.AspNetCore.Components.Web;
@attribute [RenderModeInteractiveServer]
@inject IRealmService<ILogger> _realmLogger;
@inherits RealmGuiComponentBase

@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            _realmLogger.Service.LogInformation("Realm gui initialized");
            CurrentPlayerContext.BrowserGuiService.RelayPlayerLoggedIn(CurrentPlayerContext.Player);
        }
        base.OnAfterRender(firstRender);
    }
}