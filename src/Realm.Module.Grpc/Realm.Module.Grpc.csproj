<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Google.Protobuf" Version="3.21.5" />
    <PackageReference Include="Grpc.AspNetCore.Server" Version="2.49.0" />
    <PackageReference Include="Grpc.Core" Version="2.46.5" />
    <PackageReference Include="Grpc.Tools" Version="2.49.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Serilog" Version="2.12.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Realm.Configuration\Realm.Configuration.csproj" />
    <ProjectReference Include="..\Realm.Module.Discord\Realm.Module.Discord.csproj" />
    <ProjectReference Include="..\Realm.Interfaces\Realm.Interfaces.csproj" />
    <ProjectReference Include="..\Realm.Modules.Discord\Realm.Module.Discord.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\Realm.Modules.Grpc.Proto\discord.proto" GrpcServices="Server">
      <Link>Protos\discord.proto</Link>
    </Protobuf>
    <Protobuf Include="..\Realm.Modules.Grpc.Proto\greet.proto" GrpcServices="Server">
      <Link>Protos\greet.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
